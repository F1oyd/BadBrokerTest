@model BadBrokerTest.Models.Input

@{
    ViewBag.Title = "Index";
}

    @using (Ajax.BeginForm("Result", null, new AjaxOptions {UpdateTargetId = "results"}, new {@class = "form-horizontal", role = "form"}))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.DateFrom, new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.EditorFor(m => m.DateFrom, new {htmlAttributes = new {@class = "form-control"}})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.DateTill, new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.EditorFor(m => m.DateTill, new {htmlAttributes = new {@class = "form-control"}})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Amount, new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.EditorFor(m => m.Amount, new {htmlAttributes = new {@class = "form-control"}})
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default" id="btnSubmit">Submit</button>
            </div>
        </div>
    }

<div id="results"></div>
